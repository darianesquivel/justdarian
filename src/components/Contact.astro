---
import SocialMedia from "./SocialMedia.astro";
---

<section
  id="contact"
  class="flex flex-col bg-secondary"
  aria-labelledby="contact-heading"
>
  <img src="/images/waves.svg" alt="" aria-hidden="true" />
  <div
    data-aos="fade-up"
    class="w-full flex flex-col justify-center items-center gap-10 motion-safe:animate-none text-white"
  >
    <h2
      id="contact-heading"
      class="text-3xl sm:text-4xl md:text-5xl font-extrabold text-center uppercase"
    >
      Contacto
    </h2>
    <p class="text-3xl text-center max-w-xl font-bold uppercase">
      Charlémos sobre tu proyecto
    </p>
    <div
      class="-rotate-3 bg-primary rounded-2xl p-2 px-4 shadow-2xl shadow-primary transition-transform duration-300 hover:scale-105 motion-reduce:transform-none"
    >
      <p
        class="text-2xl sm:text-3xl md:text-4xl font-extrabold text-center uppercase"
      >
        ¡Escribime por acá!
      </p>
    </div>
    <div class="motion-safe:animate-bounce motion-reduce:animate-none">
      <img
        src="/images/backhand-index-pointing-down.svg"
        alt=""
        aria-hidden="true"
      />
    </div>
    <div
      class="flex-1 flex flex-col items-center justify-center gap-4 motion-safe:animate-none"
    >
      <SocialMedia />
    </div>
  </div>
  <img src="/images/waves2.svg" alt="" aria-hidden="true" />
</section>
