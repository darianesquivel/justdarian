---
import SocialMedia from "./SocialMedia.astro";
---

<section
  id="contact"
  class="flex-col flex justify-center items-center bg-secondary"
>
  <img src="/images/waves.svg" />
  <div
    data-aos="fade-up"
    class="w-full flex flex-col justify-center items-center gap-6"
  >
    <h2
      class="text-3xl sm:text-4xl md:text-5xl font-extrabold text-white text-center"
    >
      CHARLAMOS??
    </h2>
    <div
      class="-rotate-3 bg-primary rounded-2xl p-2 px-4 shadow-2xl shadow-primary transition-transform duration-300 hover:scale-105"
    >
      <h2
        class="text-2xl sm:text-3xl md:text-4xl font-extrabold text-white text-center"
      >
        CONTACTAME POR ACA
      </h2>
    </div>
    <div class="animate-bounce">
      <a href="#services">
        <img src="/images/backhand-index-pointing-down.svg" />
      </a>
    </div>

    <div
      data-aos="fade-up"
      class="flex-1 flex flex-col items-center justify-center gap-4"
    >
      <SocialMedia />
    </div>
  </div>
  <img src="/images/waves2.svg" />
</section>
