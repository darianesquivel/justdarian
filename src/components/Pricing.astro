---
const pricing = [
  {
    title: "Landing Page",
    description: "Perfecta para lanzamientos y campañas",
    bestSeller: false,
    price: 200,
    features: [
      "Dominio incluido",
      "Hosting incluido",
      "Diseño responsive",
      "Optimización SEO",
      "Email info@tumarca.com",
      "1 página",
      "Entrega en 1-2 semanas",
    ],
  },
  {
    title: "Web Corporativa",
    bestSeller: true,
    price: 350,
    description: "Para empresas y profesionales",
    features: [
      "Dominio incluido",
      "Hosting incluido",
      "Diseño responsive",
      "Optimización SEO",
      "Email info@tumarca.com",
      "Hasta 5 páginas (Sobre mi, Servicios, Proyectos, Contacto)",
      "Entrega en 2-3 semanas",
    ],
  },
  {
    title: "E-commerce",
    price: 750,
    bestSeller: false,
    description: "Tienda online completa",
    features: [
      "Dominio incluido",
      "Hosting incluido",
      "Diseño responsive",
      "Optimización SEO",
      "Email info@tumarca.com",
      "Catálogo de productos",
      "Carrito de compras",
      "Pasarela de pagos",
      "Panel de administración",
      "Entrega en 3-4 semanas",
    ],
  },
  {
    title: "Personalizado",
    price: undefined,
    bestSeller: false,
    description: "Apps y sistemas complejos",
    features: [
      "Aplicaciones web complejas",
      "Sistemas de gestión",
      "Automatizaciones",
      "Integraciones API",
      "Tiempo según alcance",
    ],
  },
];

const DOLAR_OFICIAL_API = "https://dolarapi.com/v1/dolares/oficial";
let dolarCompra = 0; // Precio de compra (lo que el banco te paga por tu USD)

try {
  // Realizar la solicitud a la API
  const response = await fetch(DOLAR_OFICIAL_API);

  if (response.ok) {
    const data = await response.json();

    // Almacenamos el valor de 'compra'
    dolarCompra = data.compra;
  } else {
    console.error(
      `Error al obtener la cotización: ${response.status} ${response.statusText}`
    );
  }
} catch (error) {
  console.error("Error en la solicitud fetch:", error);
}

/**
 * Convierte un monto en dólares (USD) a pesos argentinos (ARS).
 * @param dolares El monto en USD a convertir.
 * @returns El monto en ARS, o 'N/A' si la cotización no está disponible.
 */
const dolarsToArs = (dolares: number): string => {
  if (dolarCompra > 0) {
    // Multiplicamos el monto en USD por el precio de compra.
    const resultado = dolares * dolarCompra;
    return resultado.toFixed(2);
  }
  return "N/A";
};
---

