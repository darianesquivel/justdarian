---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://www.justdarian.com" />

    <title>justdarian – Diseñador y desarrollador web</title>
    <meta
      name="description"
      content="Soy justdarian, diseñador y desarrollador web. Creo sitios web modernos, responsive y optimizados para tu negocio."
    />
    <meta
      name="keywords"
      content="diseñador web, desarrollador web, freelance, responsive, SEO, sitios web, proyectos web"
    />

    <meta
      property="og:title"
      content="justdarian – Diseñador y desarrollador web"
    />
    <meta
      property="og:description"
      content="Creo sitios web modernos, responsive y optimizados para tu negocio."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.justdarian.com" />
    <meta
      property="og:image"
      content="https://www.justdarian.com/images/og-image.png"
    />

    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="justdarian – Diseñador y desarrollador web"
    />
    <meta
      name="twitter:description"
      content="Creo sitios web modernos, responsive y optimizados para tu negocio."
    />
    <meta
      name="twitter:image"
      content="https://www.justdarian.com/images/og-image.png"
    />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />

    <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet" />
  </head>

  <body>
    <Header />
    <slot />
    <Footer />

    <script is:inline src="https://unpkg.com/aos@2.3.4/dist/aos.js" defer
    ></script>
    <script is:inline type="module">
      AOS?.init({
        duration: 800,
        offset: 50,
        once: true,
        easing: "ease-in-out",
      });
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
