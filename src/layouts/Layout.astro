---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>justdarian</title>
    <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet" />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
    <script is:inline src="https://unpkg.com/aos@2.3.4/dist/aos.js" defer
    ></script>
    <script type="module">
      AOS?.init({
        duration: 800,
        offset: 50,
        once: true,
        easing: "ease-in-out",
      });
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
