---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://www.justdarian.com" />

    <title>
      justdarian – Desarrollo Web a Medida. Diseño y Programación de Sistemas
    </title>
    <meta
      name="description"
      content="Creo landing pages y aplicaciones con diseño que vende y optimización SEO total. Soluciones web sólidas, pensadas para tu crecimiento. ¡Conversemos tu proyecto!"
    />
    <meta
      name="keywords"
      content="desarrollo web, sistemas a medida, diseñador web, desarrollador web, freelance, desarrollo de aplicaciones custom, landing pages, sitios web, proyectos web, SEO optimizado, diseño que convierte, responsive, alta velocidad de carga, React developer, Node.js experto, arquitectura de sistemas, desarrollador freelance full-stack, presupuesto sitio web, experiencia de usuario (UX), soluciones web para empresas"
    />
    <meta
      property="og:title"
      content="justdarian – Diseñador y desarrollador web"
    />
    <meta
      property="og:description"
      content="Creo sitios web modernos, responsive y optimizados para tu negocio."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.justdarian.com" />
    <meta
      property="og:image"
      content="https://www.justdarian.com/images/og-image.png"
    />

    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="justdarian – Diseñador y desarrollador web"
    />
    <meta
      name="twitter:description"
      content="Creo sitios web modernos, responsive y optimizados para tu negocio."
    />
    <meta
      name="twitter:image"
      content="https://www.justdarian.com/images/og-image.png"
    />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />

    <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet" />

    <!-- Trusted Types Policy -->
    <script is:inline>
      if (window.trustedTypes && window.trustedTypes.createPolicy) {
        window.trustedTypes.createPolicy("default", {
          createHTML: (string) => string,
          createScript: (string) => string,
          createScriptURL: (string) => string,
        });
      }
    </script>
  </head>

  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />

    <script is:inline src="https://unpkg.com/aos@2.3.4/dist/aos.js" defer
    ></script>
    <script is:inline type="module">
      AOS?.init({
        duration: 800,
        offset: 50,
        once: true,
        easing: "ease-in-out",
      });
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
