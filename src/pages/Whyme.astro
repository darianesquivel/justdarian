---
import { whymecards } from "../constants/whyme-cards";
---

<section id="why-me" class="bg-primary" aria-labelledby="why-me-heading">
  <div
    class="flex flex-col gap-10 overflow-hidden relative py-16 motion-safe:animate-none text-white"
  >
    <div class="flex justify-center text-center">
      <h2
        id="why-me-heading"
        data-aos="fade-up"
        class="text-3xl sm:text-4xl md:text-5xl font-extrabold uppercase"
      >
      ¿Por qué trabajar conmigo?
      </h2>
    </div>

    {
      (
        <div class="animate-scroll-right flex gap-6 w-max">
          {whymecards.concat(whymecards).map((card, i) => (
            <div
              class="flex items-start bg-secondary rounded-xl p-6 gap-4 shadow-lg flex-shrink-0 w-[90vw] sm:w-auto sm:min-w-[350px] shadow-gray-800"
              data-aos="fade-up"
              data-aos-delay={i * 100}
            >
              <img
                src={`/images/${card.icon}.svg`}
                class="w-12 sm:w-14"
                alt=""
                aria-hidden="true"
              />
              <div class="font-bold">
                <h3 class="text-1xl md:text-2xl uppercase">{card.title}</h3>
                <p class="mt-2 text-sm md:text-base">{card.text}</p>
              </div>
            </div>
          ))}
        </div>
      )
    }

    <div
      data-aos="fade-up"
      class="flex flex-col justify-center items-center text-center gap-4"
    >
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-extrabold uppercase">
        ¡Dale! Mandame un mensaje y armemos algo copado.
      </h2>
      <img
        src="/images/smiling-face-with-sunglasses.svg"
        class="w-12 sm:w-14"
        alt=""
        aria-hidden="true"
        loading="lazy"
      />
    </div>
  </div>

  <style is:global>
    @keyframes scroll-right {
      0% {
        transform: translateX(-50%);
      }
      100% {
        transform: translateX(0);
      }
    }
  
    .animate-scroll-right {
      animation: scroll-right 40s linear infinite;
    }
  
    .animate-scroll-right:hover {
      animation-play-state: paused;
    }
  
    @media (prefers-reduced-motion: reduce) {
      .animate-scroll-right,
      [data-aos] {
        animation: none !important;
        transition: none !important;
      }
    }
  </style>
</section>
