---
import PricingCard from "../components/PricingCard.astro";
import { pricing } from "../constants/pricing";
---

<section
  id="pricing"
  class="flex flex-col justify-center items-center bg-secondary w-full"
  aria-labelledby="pricing-heading"
>
  <img src="/images/waves.svg" alt="" aria-hidden="true" />

  <div
    class="flex flex-col items-center justify-center gap-6 px-4 py-6 text-white"
  >
    <div class="flex flex-col sm:flex-row gap-4 items-center text-center">
      <h2
        id="pricing-heading"
        data-aos="fade-up"
        class="text-3xl sm:text-4xl md:text-5xl font-extrabold uppercase"
      >
        Planes y Precios
      </h2>
    </div>

    <div class="flex flex-col gap-2 mb-5">
      <p
        data-aos="fade-up"
        class="text-xl sm:text-2xl md:text-3xl font-bold text-center"
      >
        Soluciones adaptadas a cada tipo de proyecto
      </p>
    </div>
    <div
      data-aos="fade-up"
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl w-full"
    >
      {pricing.map((item) => <PricingCard item={item} />)}
    </div>
  </div>

  <img src="/images/waves2.svg" alt="" aria-hidden="true" />
</section>
