---
import SocialMedia from "./SocialMedia.astro";

const MAIN_MESSAGE = "Servicio de Desarrollo Web y Sistemas a Medida.";
const SECOND_MESSAGE =
  "Transformo tus ideas en landing pages, webs o aplicaciones con SEO optimizado y un diseño que convierte.";
const CALL_TO_ACTION = "Contactame !";
---

<section
  id="hero"
  class="relative w-full min-h-dvh flex flex-col overflow-hidden bg-primary text-white pt-20"
>
  <div
    class="relative z-10 min-h-dvh flex flex-col px-6 md:px-12 max-w-7xl mx-auto w-full justify-center gap-10"
  >
    <div
      class="flex flex-col-reverse lg:flex-row items-center lg:items-center justify-between gap-5"
    >
      <div
        class="flex flex-col justify-center lg:justify-start items-center lg:items-start text-center lg:text-left"
      >
        <h1
          data-aos="fade-up"
          data-aos-delay="100"
          class="text-4xl sm:text-5xl md:text-6xl font-bold leading-tight mb-6 text-transparent bg-clip-text bg-gradient-to-r from-white to-secondary max-w-xl"
        >
          {MAIN_MESSAGE}
        </h1>

        <p
          data-aos="fade-up"
          data-aos-delay="200"
          class="text-lg md:text-xl text-white/70 mb-10 max-w-xl"
        >
          {SECOND_MESSAGE}
        </p>

        <div
          data-aos="fade-up"
          data-aos-delay="300"
          class="flex flex-col sm:flex-row items-center gap-6"
        >
          <a
            href="#services"
            aria-label="Ir a la sección de servicios"
            class="border-2 border-secondary text-secondary font-bold text-lg rounded-full p-2 px-8 transition-all duration-300 hover:scale-[1.05] uppercase whitespace-nowrap"
          >
            {CALL_TO_ACTION}
          </a>
        </div>
      </div>
        <div
          data-aos="fade-up"
          class="flex flex-col animate-scale-pulse"
        >
          <img
            src="/images/avatar.svg"
            alt="Foto de perfil de Darian"
            class="w-48 h-48 sm:w-64 sm:h-64 lg:w-80 lg:h-80 rounded-full animate-secondary-pulse object-cover pt-1"
            loading="lazy"
            fetchpriority="high"
          />
          <!-- <img
            src="/images/avatar-christmas.svg"
            alt="Foto de perfil de Darian"
            class="w-48 h-48 sm:w-64 sm:h-64 lg:w-80 lg:h-80 rounded-full animate-scale-pulse shadow-2xl shadow-secondary object-cover pt-1"
            loading="lazy"
            TODO: CHRISTMAS
          /> -->
        </div>
    </div>

    <div
      data-aos="fade-up"
      data-aos-delay="400"
      class="flex flex-col gap-5 justify-center items-center pb-10"
    >
      <SocialMedia />
      <a
        href="#services"
        aria-label="Desplazate hacia la sección de servicios"
        class="animate-bounce text-secondary hover:text-white transition-colors duration-300 z-20"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="32"
          height="32"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="w-8 h-8"
        >
          <path d="M12 5v14M19 12l-7 7-7-7"></path>
        </svg>
      </a>
    </div>
  </div>

  <style is:global>
    @keyframes scale-pulse {
      0%,
      100% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.04);
      }
    }
    .animate-scale-pulse {
      animation: scale-pulse 3s ease-in-out infinite;
    }

    @keyframes secondary-pulse {
      0%,
      100% {
        box-shadow: 0 25px 50px -12px rgba(var(--secondary-r), var(--secondary-g), var(--secondary-b), 0.3);
      }
      50% {
        box-shadow: 0 25px 50px -10px rgba(var(--secondary-r), var(--secondary-g), var(--secondary-b), 0.8);
      }
    }

    .animate-secondary-pulse {
      animation: secondary-pulse 3s ease-in-out infinite alternate;
      box-shadow: 0 25px 50px -12px rgba(var(--secondary-r), var(--secondary-g), var(--secondary-b), 0.3);
    }
  </style>

  <style is:global></style>
</section>
